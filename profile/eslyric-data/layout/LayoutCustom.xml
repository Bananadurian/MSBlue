<layout xmlns="https://github.com/ESLyric/layout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://github.com/ESLyric/layout ./Layout.xsd">
    <panel layout="stack" name="Sample layout" orientation="vertical" features="1">

        <!-- 上方歌词面板 -->
        <container name="right-panel" anchor="vfill" width="*">
            <lyric margin="0,30,0,30" text-align="center" anchor="fill" banner-text="Style for foobar2000"/>         
        </container>

        <!-- 下方按钮面板，内部横向排列 -->
        <container name="right-panel1" layout="stack" orientation="horizontal" justify="start" anchor="bottom" width="*" height="50">
            <button name="album-info" margin="20,0,0,0" anchor="left" width="30" height="30" 
                background="imgs/users-round.png" 
                command="mm://View/Popup panels/Show/艺人专辑信息"/>            
            <button name="artist-info" margin="10,0,0,0" anchor="left" width="30" height="30" 
                background="imgs/disc-3.png" 
                command="mm://View/Popup panels/Show/艺人专辑信息"/>
        </container>               

    </panel>
</layout>
